<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="1" author="me">
        <validCheckSum>any</validCheckSum>
        <sqlFile path="database/postgres/initDB.sql"/>
    </changeSet>
    <include file="database/postgres/changelog/db.changelog-sequence.xml"/>

     <changeSet author="meow" id="renameAvailability">
         <renameColumn columnDataType="boolean"
                       newColumnName="availability"
                       oldColumnName="avalibility"
                       schemaName="rh"
                       tableName="dish"/>
     </changeSet>
     <changeSet author="meow" id="renameClosed">
         <renameColumn columnDataType="boolean"
                       newColumnName="closed"
                       oldColumnName="close"
                       schemaName="rh"
                       tableName="order"/>
     </changeSet>
     <changeSet author="meow" id="modifyDataTypePreparingTime">
         <modifyDataType columnName="preparingtime"
                         newDataType="int"
                         schemaName="rh"
                         tableName="dish"/>
     </changeSet>
     <changeSet author="meow" id="modifyLengthDishName">
         <modifyDataType columnName="name"
                         newDataType="varchar(255)"
                         schemaName="rh"
                         tableName="dish"/>
     </changeSet>
     <changeSet author="meow" id="modifyDataTypePrice">
         <modifyDataType columnName="price"
                         newDataType="decimal"
                         schemaName="rh"
                         tableName="dish"/>
     </changeSet>

     <include file="database/postgres/changelog/db.changelog-notNull.xml"/>
     <include file="database/postgres/changelog/db.changelog-unique.xml"/>
     <include file="database/postgres/changelog/db.changelog-check.xml"/>

     <changeSet id="2" author="me">
         <validCheckSum>any</validCheckSum>
         <sqlFile path="database/postgres/populateDB.sql"/>
     </changeSet>
</databaseChangeLog>