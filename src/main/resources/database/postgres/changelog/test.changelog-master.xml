<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="1" author="emaxi" runAlways="true">
        <validCheckSum>7:b5d36c5b2e8bc511913de76babd4adbf</validCheckSum>
        <sqlFile path="database/postgres/sql/createTest.sql"/>
    </changeSet>

    <changeSet author="emaxi" id="addUniqueConstraintCategoryName">
        <addUniqueConstraint columnNames="name"
                             deferrable="true"
                             initiallyDeferred="true"
                             schemaName="rh"
                             tableName="category"
        />
    </changeSet>
    <changeSet author="emaxi" id="addUniqueConstraintRoleName">
        <addUniqueConstraint columnNames="name"
                             deferrable="true"
                             initiallyDeferred="true"
                             schemaName="rh"
                             tableName="role"
        />
    </changeSet>
    <changeSet author="emaxi" id="addUniqueConstraintStatusName">
        <addUniqueConstraint columnNames="name"
                             deferrable="true"
                             initiallyDeferred="true"
                             schemaName="rh"
                             tableName="status"
        />
    </changeSet>
    <changeSet author="emaxi" id="modifyDataTypePrice" runAlways="true">
        <modifyDataType columnName="price"
                        newDataType="decimal"
                        schemaName="rh"
                        tableName="dish"/>
    </changeSet>
    <changeSet author="emaxi" id="dropColumnRoleId">
        <dropColumn columnName="role_id"
                    schemaName="rh"
                    tableName="user"/>
    </changeSet>
    <changeSet id="2" author="emaxi" runAlways="true">
        <sqlFile path="database/postgres/sql/createUserRole.sql"/>
    </changeSet>

    <changeSet author="emaxi" id="dropCheckQuantityConstraintIfExists">
        <sql>
            ALTER TABLE rh.order DROP CONSTRAINT IF EXISTS timeChecker
        </sql>
    </changeSet>
    <changeSet author="emaxi" id="addCheckTimeConstraint">
        <sql>
            ALTER TABLE rh.order ADD CONSTRAINT timeChecker
            CHECK ((EXTRACT(DAYS FROM NOW() - rh.order.time))>=0)
        </sql>
    </changeSet>
    <changeSet author="emaxi" id="dropNotNullConstraintPicture" runAlways="true">
        <dropNotNullConstraint columnDataType="VARCHAR(100)"
                               columnName="picture"
                               schemaName="rh"
                               tableName="dish"/>
    </changeSet>
   <!-- <changeSet id="DropPictureColumn" author="emaxi" runAlways="true">
        <dropColumn tableName="dish" schemaName="rh" columnName="picture"/>
    </changeSet> -->

    <include file="database/postgres/sql/populateTest.sql"/>
    <changeSet id="populateTest" author="emaxi" runAlways="true">
        <sqlFile path="database/postgres/sql/populateTest.sql"/>
    </changeSet>

    <changeSet id="6" author="me" runAlways="true">
        <sqlFile path="database/postgres/sql/imageReviewEntities.sql"/>
    </changeSet>

    <changeSet author="orasso" id="7" runAlways="true">
        <createTable remarks="A String"
                     schemaName="rh"
                     tableName="callforwaiter">
            <column name="id" type="bigint" autoIncrement="true" defaultValue="1"/>
            <column name="table" type="int"/>
            <column name="waiter_id" type="bigint"/>
            <column name="time_create" type="timestamp"/>
            <column name="time_close" type="timestamp"/>
        </createTable>
    </changeSet>
    <changeSet author="orasso" id="AddForeignKeyWaiterId">
        <addForeignKeyConstraint baseColumnNames="waiter_id"
                                 baseTableName="callforwaiter"
                                 baseTableSchemaName="rh"
                                 constraintName="waiter_fk"
                                 deferrable="true"
                                 initiallyDeferred="true"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="id"
                                 referencedTableName="user"
                                 referencedTableSchemaName="rh"
        />
    </changeSet>
</databaseChangeLog>